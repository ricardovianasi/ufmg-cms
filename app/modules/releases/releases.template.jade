header.view-header.clearfix
  h1.pull-left {{ title }}
  .pull-right
section.clearfix.spacer-bottom
  ol.breadcrumb.pull-left
    li
      a(href='#/') Dashboard
    li.active
      | {{ title }}
  .pull-right
    a.btn.btn-info.btn-sm.pull-left(ng-href='#/releases/new')
      span.fa.fa-plus
      |    NOVO RELEASE
.row.list-header
  .col-xs-4
    ul.list-inline.list-status
      li
        a(ng-click="itemStatus = ''")
          span(ng-class="{ 'strong': itemStatus == '' || itemStatus == undefined }")
            | Tudo
          span.small ({{ releases.total }})
      li
        a(ng-click="itemStatus = 'publish'")
          span(ng-class="{ 'strong': itemStatus == 'published'}")
            | Publicados
          span.small ({{ (releases.items|filter: {status: 'published'}).length }})
      li
        a(ng-click="itemStatus = 'draft'")
          span(ng-class="{ 'strong': itemStatus == 'draft'}")
            | Rascunho
          span.small ({{ (releases.items|filter: {status: 'draft'}).length }})
      li
        a(ng-click="itemStatus = 'scheduled'")
          span(ng-class="{ 'strong': itemStatus == 'scheduled'}")
            | Agendado
          span.small ({{ (releases.items|filter: {status: 'scheduled'}).length }})
  .col-xs-8
    .pull-right
      .pull-left
        form.form-inline(action='')
          .form-group
            input.form-control(type='text', ng-model='search', placeholder='Pesquisar')
.row
  .col-xs-12
    table.table.table-bordered(cellspacing='0', width='100%', role='grid')
      thead
        tr(role='row')
          th(style='width: 50%') Título
          th.tac(style='width: 22%') Autor
          th.tac(style='width: 14%;') Data da Publicação
          th.tac(style='width: 130px') Ações
      tbody
        tr.odd(role='row', ng-repeat='release in releases.items|filter: {description: search}|filter: {status: itemStatus}')
          td
            | {{ release.title }}
          td.tac
            | {{ release.author.name }}
          td.tac
            strong
              | {{ DateTimeHelper.convertDate(release.created_at)|date:'dd/MM/yyyy' }}
            br
            small ({{ release.status }})
          td.tac
            a.btn.btn-primary(ng-click='void(0);')
              i.fa.fa-eye
            a.btn.btn-warning(ng-href='#/releases/edit/{{ release.id }}')
              i.fa.fa-pencil
            a.btn.btn-danger(ng-click='removeRelease(release.id, release.title)')
              i.fa.fa-trash
.row(ng-show='releases.total > 30')
  .col-xs-12
    pagination.pagination-sm(boundary-links='true', total-items='releases.total', items-per-page='releases.page_size', ng-model='currentPage', previous-text='‹', next-text='›', first-text='«', last-text='»', ng-change='changePage()')
