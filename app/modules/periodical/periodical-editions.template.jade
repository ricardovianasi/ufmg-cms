header.view-header.clearfix
  .pull-left
    h2 {{ periodical.name }}
    ol.breadcrumb
      li.active
        a(href='#/periodicals') Periódicos Jornalísticos
      li.active {{ periodical.name }}
  .pull-right
    a.btn.btn-primary.btn-lg.pull-left(ng-href='#/periodicals/{{ periodical.id }}/edition/new') NOVA EDIÇÃO
.row.list-header
  .col-xs-12
    .pull-right
      form.form-inline(action='')
        .form-group
          input.form-control(type='text', ng-model='search', placeholder='Pesquisar')
.row
  .col-xs-12
    table.table.table-bordered(cellspacing='0', width='100%', role='grid')
      thead
        tr(role='row')
          th(style='width: 60%') Título
          th.tac(style='width: 20%') Autor
          th.tac(style='width: 20%;') Data de Publicação
      tbody
        tr.odd(role='row', ng-repeat='item in editions.items | filter: search | filter: { status: itemStatus }')
          td
            .clearfix
              .listing-actions.pull-left
                a.btn.btn-warning(ng-href='#/periodicals/{{ periodical.id }}/edition/edit/{{ item.id }}')
                  i.fa.fa-pencil
              .pull-left
                strong {{ item.number }}
                |                             {{ item.theme }}
          td {{ item.author.name }}
          td
            strong
              | {{ convertDate(item.published_at) }}
            br
            small {{ item.status }}
